    <script>
        // --- DATA OBJECTS ---
        
        // 1. Strategy Content Data
        const strategyData = {
            reading: `
                <div class="grid md:grid-cols-2 gap-8 fade-in">
                    <div>
                        <h3 class="text-xl font-bold text-[#2D2A26] mb-4">Active Reading Protocol</h3>
                        <p class="text-[#6B665F] mb-6">Passive reading is the enemy. You must engage with the text aggressively to retain structure and argument.</p>
                        <div class="space-y-4">
                            <div class="flex items-start">
                                <div class="bg-[#F4F1EA] p-3 rounded-lg mr-4"><i class="fas fa-highlighter text-[#8A9A8A]"></i></div>
                                <div>
                                    <h4 class="font-bold text-[#2D2A26]">The "Pencil Predator"</h4>
                                    <p class="text-sm text-[#6B665F]">Underline the MAIN IDEA of each paragraph. Circle transition words (However, Therefore). Do not underline whole sentences.</p>
                                </div>
                            </div>
                            <div class="flex items-start">
                                <div class="bg-[#F4F1EA] p-3 rounded-lg mr-4"><i class="fas fa-glasses text-[#8A9A8A]"></i></div>
                                <div>
                                    <h4 class="font-bold text-[#2D2A26]">Tone Analysis</h4>
                                    <p class="text-sm text-[#6B665F]">Identify the author's attitude immediately. Is it critical? Objective? Enthusiastic? Mark (+), (-), or (0) in margins.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bg-[#FDFCF8] p-6 rounded-xl border border-[#E5E0D8]">
                        <h4 class="font-bold text-[#8A9A8A] mb-3 text-xs uppercase tracking-wide">The Golden Rule</h4>
                        <p class="text-2xl font-serif text-[#2D2A26] italic mb-6">"Every correct answer is strictly supported by the text. If you have to tell a story to make an answer work, it is wrong."</p>
                        <div class="mt-4 p-4 bg-[#F4F1EA] rounded text-sm text-[#5C6773]">
                            <strong>Tip:</strong> Read the blurb (intro text) first. It provides context that saves minutes of confusion.
                        </div>
                    </div>
                </div>
            `,
            grammar: `
                <div class="fade-in">
                    <h3 class="text-xl font-bold text-[#2D2A26] mb-6 text-center">The "Big 4" Rules to Memorize</h3>
                    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
                        <!-- Rule 1 -->
                        <div class="p-5 border border-[#E5E0D8] rounded-xl hover:shadow-md transition-shadow">
                            <div class="text-[#C2A895] text-2xl mb-2"><i class="fas fa-paragraph"></i></div>
                            <h4 class="font-bold text-[#2D2A26] mb-2">Subject-Verb</h4>
                            <p class="text-xs text-[#6B665F]">Ignore prepositional phrases between subject and verb. <br><em class="block mt-2 text-[#2D2A26]">"The box [of nails] IS heavy."</em></p>
                        </div>
                        <!-- Rule 2 -->
                        <div class="p-5 border border-[#E5E0D8] rounded-xl hover:shadow-md transition-shadow">
                            <div class="text-[#8A9A8A] text-2xl mb-2"><i class="fas fa-quote-right"></i></div>
                            <h4 class="font-bold text-[#2D2A26] mb-2">Stop Punctuation</h4>
                            <p class="text-xs text-[#6B665F]">Period = Semicolon = Comma+FANBOYS. Use these to separate two independent clauses.</p>
                        </div>
                        <!-- Rule 3 -->
                        <div class="p-5 border border-[#E5E0D8] rounded-xl hover:shadow-md transition-shadow">
                            <div class="text-[#5C6773] text-2xl mb-2"><i class="fas fa-compress-arrows-alt"></i></div>
                            <h4 class="font-bold text-[#2D2A26] mb-2">Conciseness</h4>
                            <p class="text-xs text-[#6B665F]">If 3 answers mean the same thing, the shortest one is usually correct. Avoid redundancy.</p>
                        </div>
                        <!-- Rule 4 -->
                        <div class="p-5 border border-[#E5E0D8] rounded-xl hover:shadow-md transition-shadow">
                            <div class="text-[#C2A895] text-2xl mb-2"><i class="fas fa-project-diagram"></i></div>
                            <h4 class="font-bold text-[#2D2A26] mb-2">Modifiers</h4>
                            <p class="text-xs text-[#6B665F]">Dangling modifiers must be followed immediately by what they modify.<br><em class="block mt-2 text-[#2D2A26]">"Walking down the street, the trees..." (WRONG)</em></p>
                        </div>
                    </div>
                </div>
            `,
            tactics: `
                 <div class="grid md:grid-cols-3 gap-6 fade-in">
                    <!-- Tactic Card -->
                    <div class="bg-[#FDFCF8] p-5 rounded-xl border-l-4 border-[#8A9A8A] shadow-sm">
                        <h4 class="font-bold text-[#2D2A26] mb-2">Vocabulary in Context</h4>
                        <p class="text-sm text-[#6B665F] mb-3">Don't pick the most common definition. Treat the word as a blank.</p>
                        <div class="text-xs bg-[#F4F1EA] p-2 rounded">
                            <strong>Strategy:</strong> Plug in your own word first, then match it to choices.
                        </div>
                    </div>
                    <!-- Tactic Card -->
                    <div class="bg-[#FDFCF8] p-5 rounded-xl border-l-4 border-[#C2A895] shadow-sm">
                        <h4 class="font-bold text-[#2D2A26] mb-2">Evidence Pairs</h4>
                        <p class="text-sm text-[#6B665F] mb-3">These are "Answer" + "Evidence" questions.</p>
                        <div class="text-xs bg-[#F4F1EA] p-2 rounded">
                            <strong>Strategy:</strong> Work backwards. Find the evidence lines first that support <em>any</em> answer choice.
                        </div>
                    </div>
                    <!-- Tactic Card -->
                    <div class="bg-[#FDFCF8] p-5 rounded-xl border-l-4 border-[#5C6773] shadow-sm">
                        <h4 class="font-bold text-[#2D2A26] mb-2">Data Graphics</h4>
                        <p class="text-sm text-[#6B665F] mb-3">Charts and graphs in the verbal section.</p>
                        <div class="text-xs bg-[#F4F1EA] p-2 rounded">
                            <strong>Strategy:</strong> Read the axis labels and the title. Ignore the passage; the answer is usually just in the chart.
                        </div>
                    </div>
                 </div>
            `
        };

        // 2. Library Book Data
        const libraryData = [
            { id: 1, title: "Pride and Prejudice", author: "Jane Austen", type: "literature", desc: "Essential for mastering 19th-century syntax and subtle irony.", difficulty: "Hard" },
            { id: 2, title: "Scientific American", author: "Various", type: "science", desc: "Read 'Biology' and 'Astronomy' articles to prep for dense technical passages.", difficulty: "Medium" },
            { id: 3, title: "The Federalist Papers", author: "Hamilton/Madison", type: "history", desc: "The gold standard for the 'Founding Documents' passage type. Dense archaic arguments.", difficulty: "Very Hard" },
            { id: 4, title: "National Geographic", author: "Various", type: "science", desc: "Good for environmental science passages and data interpretation.", difficulty: "Easy" },
            { id: 5, title: "Jane Eyre", author: "Charlotte Brontë", type: "literature", desc: "Gothic literature with complex emotional vocabulary.", difficulty: "Hard" },
            { id: 6, title: "A Room of One's Own", author: "Virginia Woolf", type: "history", desc: "Great for the 'Global Conversation' or 'Civil Rights' passage types.", difficulty: "Medium" }
        ];

        // --- FUNCTIONS ---

        // 1. Tab Switching Logic
        function switchStrategyTab(tabName) {
            // Update Tab Styles
            ['reading', 'grammar', 'tactics'].forEach(t => {
                const btn = document.getElementById(`tab-${t}`);
                if (t === tabName) {
                    btn.className = 'tab-active px-6 py-3 text-sm md:text-base transition-all';
                } else {
                    btn.className = 'tab-inactive px-6 py-3 text-sm md:text-base transition-all';
                }
            });
            // Update Content
            document.getElementById('strategy-content').innerHTML = strategyData[tabName];
        }

        // 2. Library Rendering & Filtering
        function renderLibrary(filter) {
            const grid = document.getElementById('library-grid');
            grid.innerHTML = '';
            
            // Filter Buttons Update
            document.querySelectorAll('.filter-btn').forEach(btn => {
                if (btn.dataset.filter === filter) {
                    btn.classList.remove('bg-white', 'text-[#6B665F]');
                    btn.classList.add('bg-[#2D2A26]', 'text-white');
                } else {
                    btn.classList.add('bg-white', 'text-[#6B665F]');
                    btn.classList.remove('bg-[#2D2A26]', 'text-white');
                }
            });

            // Filter Data
            const filteredData = filter === 'all' ? libraryData : libraryData.filter(item => item.type === filter);

            // Create Cards
            filteredData.forEach(book => {
                const typeColors = {
                    literature: 'bg-[#C2A895]',
                    science: 'bg-[#8A9A8A]',
                    history: 'bg-[#5C6773]'
                };
                
                const card = document.createElement('div');
                card.className = 'bg-white rounded-xl shadow-sm border border-[#E5E0D8] p-6 card-hover flex flex-col justify-between fade-in';
                card.innerHTML = `
                    <div>
                        <div class="flex justify-between items-start mb-4">
                            <span class="${typeColors[book.type]} text-white text-[10px] font-bold px-2 py-1 rounded uppercase tracking-wider">${book.type}</span>
                            <span class="text-xs font-semibold text-[#6B665F] border border-[#E5E0D8] px-2 py-0.5 rounded">${book.difficulty}</span>
                        </div>
                        <h3 class="text-lg font-bold text-[#2D2A26] leading-tight mb-1">${book.title}</h3>
                        <p class="text-xs text-[#8A9A8A] mb-4 italic">${book.author}</p>
                        <p class="text-sm text-[#6B665F] mb-6">${book.desc}</p>
                    </div>
                    <button class="w-full py-2 text-xs font-bold text-[#2D2A26] bg-[#F4F1EA] hover:bg-[#E5E0D8] rounded transition-colors">
                        Add to Reading List
                    </button>
                `;
                grid.appendChild(card);
            });
        }

        function filterLibrary(type) {
            renderLibrary(type);
        }

        // 3. Navigation Scroll
        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
        }

        // 4. Chart Initialization
        function initCharts() {
            // Chart 1: Progress (Line Chart)
            const ctxProgress = document.getElementById('progressChart').getContext('2d');
            new Chart(ctxProgress, {
                type: 'line',
                data: {
                    labels: ['Week 0', 'Week 1', 'Week 2', 'Week 3', 'Week 4'],
                    datasets: [{
                        label: 'Projected Score',
                        data: [500, 560, 610, 680, 720],
                        borderColor: '#8A9A8A',
                        backgroundColor: 'rgba(138, 154, 138, 0.1)',
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#2D2A26',
                        pointBorderColor: '#fff',
                        pointRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#2D2A26',
                            titleFont: { family: 'Inter', size: 13 },
                            bodyFont: { family: 'Inter', size: 13 },
                            padding: 10,
                            cornerRadius: 4
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            min: 400,
                            max: 800,
                            grid: { color: '#F4F1EA' },
                            ticks: { font: { family: 'Inter' }, color: '#6B665F' }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { font: { family: 'Inter' }, color: '#6B665F' }
                        }
                    }
                }
            });

            // Chart 2: Error Analysis (Doughnut)
            const ctxError = document.getElementById('errorChart').getContext('2d');
            new Chart(ctxError, {
                type: 'doughnut',
                data: {
                    labels: ['Vocab Context', 'Evidence', 'Grammar', 'Inference'],
                    datasets: [{
                        data: [15, 35, 30, 20],
                        backgroundColor: [
                            '#C2A895', // Clay
                            '#2D2A26', // Black
                            '#8A9A8A', // Sage
                            '#E5E0D8'  // Stone
                        ],
                        borderWidth: 0,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: { family: 'Inter', size: 11 },
                                color: '#6B665F',
                                padding: 20,
                                usePointStyle: true
                            }
                        },
                        tooltip: {
                            backgroundColor: '#2D2A26',
                            callbacks: {
                                label: function(context) {
                                    return ` ${context.label}: ${context.raw}% of Errors`;
                                }
                            }
                        }
                    }
                }
            });
        }

        // --- INITIALIZATION ---
        document.addEventListener('DOMContentLoaded', () => {
            switchStrategyTab('reading');
            renderLibrary('all');
            initCharts();
        });

    </script>
</body>
</html>
